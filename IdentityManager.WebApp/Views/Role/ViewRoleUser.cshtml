@model IEnumerable<IdentityManager.WebApp.Models.ShowUserViewModel>
@{
    ViewBag.Title = "Show Role Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Show @ViewBag.RoleName Users</h4>
<p>
    @Html.ActionLink("Role List", "List")
</p>
<table class="table">
    <thead>
        <tr>
            <th>User  Name</th>
            <th>Email</th>
            <th>FaceBook Account</th>
            <th>Twitter Account</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => user.UserName)</td>
                <td>@Html.DisplayFor(m => user.Email)</td>
                <td>@Html.DisplayFor(m => user.FBAccount)</td>
                <td>@Html.DisplayFor(m => user.TwitterAccount)</td>
                <td>
                    @Html.ActionLink("Remove User", "RemoveRoleUser", new { roleName=ViewBag.RoleName, userId = user.Id },new { onclick = "return confirm ('Are you sure you wish to delete this user?');" })
                </td>
            </tr>
        }
    </tbody>
</table>